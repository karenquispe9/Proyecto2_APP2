<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarMascota"
    android:background="@color/boton_naranja">

    <!-- Título -->
    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datos mascota"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/lalezar_regular"
        android:layout_marginTop="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CardView para contener los campos de entrada -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"> <!-- Espacio interno en el CardView -->

            <!-- Tipo de mascota -->
            <TextView
                android:id="@+id/tv_tipo_mascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de mascota"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/lato_black"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/et_tipo_mascota"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Escribe el tipo de mascota"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_tipo_mascota"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Raza -->
            <TextView
                android:id="@+id/tv_raza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raza"
                android:fontFamily="@font/lato_black"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/et_tipo_mascota"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/et_raza"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Escribe la raza"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_raza"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Nombre -->
            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:fontFamily="@font/lato_black"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/et_raza"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/et_nombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Escribe el nombre"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_nombre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Fecha de nacimiento -->
            <TextView
                android:id="@+id/tv_fecha_nacimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de nacimiento"
                android:textSize="16sp"
                android:fontFamily="@font/lato_black"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/et_nombre"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/et_fecha_nacimiento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Selecciona una fecha"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:inputType="date"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_fecha_nacimiento"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Hembra o macho -->
            <TextView
                android:id="@+id/tv_genero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hembra o macho?"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/lato_black"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/et_fecha_nacimiento"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/et_genero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Escribe 'Hembra' o 'Macho'"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_genero"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Tamaño -->
            <TextView
                android:id="@+id/tv_tamano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tamaño"
                android:fontFamily="@font/lato_black"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/et_genero"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/et_tamano"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="'Pequeño', 'Mediano' o 'Grande'"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_tamano"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Añadir foto -->
            <TextView
                android:id="@+id/tv_anadir_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Añadir foto"
                android:textSize="16sp"
                android:fontFamily="@font/lato_black"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/et_tamano"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_anadir_foto"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/uploadfotoperfil_black"
                android:contentDescription="Añadir foto"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_anadir_foto"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Contenedor de los botones -->
    <LinearLayout
        android:id="@+id/btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón Atrás -->
        <Button
            android:id="@+id/btn_atras"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Atrás"
            android:fontFamily="@font/lato_black"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="8dp"
            android:padding="12dp"/>

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:fontFamily="@font/lato_black"
            android:textColor="@android:color/black"
            android:backgroundTint="@color/white"
            android:layout_marginStart="8dp"
            android:padding="12dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>