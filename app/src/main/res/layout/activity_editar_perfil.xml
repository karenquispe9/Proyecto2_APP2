<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/boton_naranja">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/ActividadBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingStart="5dp"
        android:layout_margin="5dp">

        <ImageButton
            android:id="@+id/AtrasButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/atras_blanco"
            android:contentDescription="atras"
            android:backgroundTint="@color/boton_naranja"/>

        <TextView
            android:id="@+id/TextAjustes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="Editar Perfil"
            android:textSize="40sp"
            android:fontFamily="@font/lalezar_regular"
            android:textColor="@color/white"/>

    </LinearLayout>

    <!-- Imagen de perfil y bot贸n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/ivFotoPerfil"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/uploadfotoperfil"
            android:contentDescription="Foto de perfil"/>

        <Button
            android:id="@+id/btnCambiarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar foto"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"/>
    </LinearLayout>

    <!-- Espacio para centrar la CardView -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="442dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <!-- CardView con los campos Nombre y Sobre ti -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="4dp"
            card_view:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Nombre -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Nombre:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tu nombre" />

                <!-- Descripci贸n -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Descripci贸n:"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top|start"
                    android:hint="Escribe algo sobre ti..."
                    android:inputType="textMultiLine" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Bot贸n guardar -->
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Cambios"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"/>
</LinearLayout>