<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfiguracionCuenta">

    <LinearLayout
        android:id="@+id/ConfiguracionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingStart="5dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/AtrasButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/atras"
            android:contentDescription="atras"
            android:backgroundTint="@color/white"/>

        <TextView
            android:id="@+id/TextAjustes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:text="@string/configuracion_de_la_cuenta"
            android:textSize="30dp"
            android:fontFamily="@font/lalezar_regular"
            android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
        android:id="@+id/TextPrivacidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/lalezar_regular"
        android:text="@string/privacidad"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConfiguracionBar" />

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/item_background"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/TextPrivacidad">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cuenta_privada"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingStart="16dp" />

        <Switch
            android:id="@+id/switchModoPrivado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="15dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/TextPreferencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/lalezar_regular"
        android:text="@string/preferencias"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row1" />

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/item_background"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/TextPreferencia">

        <TextView
            android:id="@+id/textViewIdioma"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/idioma"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingStart="16dp" />

        <TextView
            android:id="@+id/textViewIdiomaSeleccionado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EspaÃ±ol"
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingEnd="15dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/TextTema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/lalezar_regular"
        android:text="@string/tema"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row2" />


    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingVertical="16dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/item_background"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/TextTema">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/modo_oscuro"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingStart="16dp" />

        <Switch
            android:id="@+id/switchModoOscuro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"/>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>