<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/BarraPerfil"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/PerfilMascotaButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/perfilmascota_button"
            android:backgroundTint="@color/white"
            android:contentDescription="desplegable mascotas"/>



        <TextView
            android:id="@+id/PaginaPerfil"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:text="@string/perfil"
            android:textSize="37sp"
            android:fontFamily="@font/lalezar_regular"
            android:textColor="@color/black"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/SettingsButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/settings_button"
            android:backgroundTint="@color/white"
            android:contentDescription="settings"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/DatosPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toBottomOf="@id/BarraPerfil"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="422dp"
            android:layout_height="300dp">

            <ImageButton
                android:id="@+id/FotoPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/fotoperfil"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="image"/>

            <TextView
                android:id="@+id/NombreUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/lato_black"
                android:text="@string/usuario_perfil"
                android:textColor="@color/black"
                android:textSize="25dp"
                app:layout_constraintStart_toEndOf="@id/FotoPerfil"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:text="@string/descripcion"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@id/FotoPerfil"
                app:layout_constraintTop_toBottomOf="@id/NombreUsuario" />
            <!--publicaciones-->

            <TextView
                android:id="@+id/NumPublicaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/lato_regular"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/FotoPerfil" />

            <!--seguidores-->

            <TextView
                android:id="@+id/TextPublicaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/publicaciones"
                app:layout_constraintEnd_toStartOf="@id/TextSeguidores"
                app:layout_constraintHorizontal_bias="0.365"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/NumPublicaciones" />

            <!--seguidos-->

            <TextView
                android:id="@+id/NumSeguidores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="116dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/lato_regular"
                android:text="300"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/NumPublicaciones"
                app:layout_constraintTop_toBottomOf="@id/FotoPerfil" />

            <TextView
                android:id="@+id/TextSeguidores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/seguidores"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/TextSeguidos"
                app:layout_constraintTop_toBottomOf="@+id/NumSeguidores"
                app:layout_constraintVertical_bias="0.252" />

            <TextView
                android:id="@+id/NumSeguidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="76dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:fontFamily="@font/lato_regular"
                android:text="200"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/NumSeguidores"
                app:layout_constraintTop_toBottomOf="@+id/FotoPerfil" />

            <TextView
                android:id="@+id/TextSeguidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/seguidos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/NumSeguidos"
                app:layout_constraintVertical_bias="0.252" />

            <Button
                android:id="@+id/Publicaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lato_regular"
                android:text="@string/publicaciones_buttom"
                android:textColor="@color/letra_boton_naranja"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/TextMascota"
                app:layout_constraintTop_toBottomOf="@+id/TextSeguidores"
                app:layout_constraintVertical_bias="0.695" />

            <Button
                android:id="@+id/TextMascota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/lato_regular"
                android:text="@string/mascotas_button"
                android:textColor="@color/letra_boton_naranja"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/TextSeguidores" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPerfil"
        android:layout_width="416dp"
        android:layout_height="0dp"
        android:background="@color/fondo_gris"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/DatosPerfil" />

    <include
        layout="@layout/bottom_nav"
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <include
        layout="@layout/menu_mascotas"
        android:id="@+id/menuMascotas"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/DatosPerfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>